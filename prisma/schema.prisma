generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id
  email           String          @unique
  name            String
  emailVerified   Boolean         @default(false)
  image           String?
  creditCards     CreditCard[]
  personCompanies PersonCompany[]
  debts           Debt[]
  categories      Category[]
  assets          Asset[]
  incomes         Income[]
  sessions        Session[]
  accounts        Account[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model CreditCard {
  id         String @id @default(cuid())
  userId     String
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  name       String
  dueDay     Int // Dia de vencimento da fatura (1-31)
  closingDay Int? // Dia de fechamento da fatura (1-31)

  debts Debt[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Um usu√°rio n√£o pode ter dois cart√µes com o mesmo nome
  @@unique([userId, name])
}

model PersonCompany {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  name   String

  debts          Debt[]
  participations DebtParticipant[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Um usu√°rio n√£o pode ter duas pessoas/empresas com o mesmo nome
  @@unique([userId, name])
}

enum PaymentMethod {
  CREDIT_CARD
  BOLETO
  DEBIT
  PIX
  TRANSFER
  CASH
}

model Debt {
  id                   String         @id @default(cuid())
  userId               String
  user                 User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  cardId               String?
  creditCard           CreditCard?    @relation(fields: [cardId], references: [id], onDelete: Restrict)
  personCompanyId      String?
  personCompany        PersonCompany? @relation(fields: [personCompanyId], references: [id], onDelete: Restrict)
  categoryId           String?
  category             Category?      @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  assetId              String?
  asset                Asset?         @relation(fields: [assetId], references: [id], onDelete: SetNull)
  paymentMethod        PaymentMethod  @default(CREDIT_CARD)
  dueDay               Int? // Dia de vencimento (1-31), usado quando n√£o h√° cart√£o
  totalAmount          Decimal        @db.Decimal(10, 2)
  installmentsQuantity Int
  installmentValue     Decimal        @db.Decimal(10, 2)
  startDate            DateTime       @default(now()) @db.Date
  description          String
  isArchived           Boolean        @default(false)
  isRecurring          Boolean        @default(false)

  installments Installment[]
  participants DebtParticipant[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, isArchived])
  @@index([cardId])
  @@index([personCompanyId])
  @@index([categoryId])
  @@index([assetId])
}

model DebtParticipant {
  id              String        @id @default(cuid())
  debtId          String
  debt            Debt          @relation(fields: [debtId], references: [id], onDelete: Cascade)
  personCompanyId String
  personCompany   PersonCompany @relation(fields: [personCompanyId], references: [id], onDelete: Restrict)
  amount          Decimal       @db.Decimal(10, 2)

  @@unique([debtId, personCompanyId])
  @@index([debtId])
  @@index([personCompanyId])
}

model Asset {
  id          String  @id @default(cuid())
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  emoji       String  @default("üì¶")
  description String?

  debts Debt[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId])
}

model Installment {
  id                String   @id @default(cuid())
  debtId            String
  debt              Debt     @relation(fields: [debtId], references: [id], onDelete: Cascade)
  installmentNumber Int // 1, 2, 3...
  dueDate           DateTime @db.Date // Data de vencimento calculada para esta parcela
  amount            Decimal  @db.Decimal(10, 2)
  isPaid            Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Cada n√∫mero de parcela para uma d√≠vida deve ser √∫nico
  @@unique([debtId, installmentNumber])
  @@index([debtId, isPaid])
  @@index([debtId, dueDate])
}

model Category {
  id       String     @id @default(cuid())
  userId   String
  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  name     String
  emoji    String     @default("üìÅ")
  color    String     @default("#6B7280") // Cor hex para badge
  parentId String?
  parent   Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children Category[] @relation("CategoryHierarchy")

  debts Debt[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId])
  @@index([parentId])
}

enum IncomeType {
  SALARY
  FREELANCE
  INVESTMENT
  RENTAL
  GIFT
  OTHER
}

model Income {
  id          String     @id @default(cuid())
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?
  amount      Decimal    @db.Decimal(10, 2) // Valor mensal/unit√°rio
  incomeType  IncomeType
  isRecurring Boolean    @default(false)
  receiveDay  Int? // Dia do m√™s para recorrentes (1-31)
  startDate   DateTime   @default(now()) @db.Date
  endDate     DateTime?  @db.Date // null = indefinido (sem data limite)
  isArchived  Boolean    @default(false)

  entries IncomeEntry[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId, isArchived])
}

model IncomeEntry {
  id             String    @id @default(cuid())
  incomeId       String
  income         Income    @relation(fields: [incomeId], references: [id], onDelete: Cascade)
  referenceMonth DateTime  @db.Date // Primeiro dia do m√™s de refer√™ncia
  amount         Decimal   @db.Decimal(10, 2)
  isReceived     Boolean   @default(false)
  receivedAt     DateTime?

  createdAt DateTime @default(now())

  @@unique([incomeId, referenceMonth])
  @@index([incomeId])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}
